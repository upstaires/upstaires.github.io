// 卡片式文章容器
.post-list
  display: grid
  gap: 2rem
  padding: 2rem

.post-card
  background: #fff
  border-radius: 12px
  box-shadow: 0 4px 6px rgba(0,0,0,0.1)
  padding: 1.5rem
  transition: transform 0.3s ease

  &:hover
    transform: translateY(-5px)

// 标签云特效
.tag-cloud
  text-align: center
  padding: 2rem

  a
    display: inline-block
    margin: 0.5rem
    padding: 8px 16px
    background: linear-gradient(135deg, #6c5ce7 0%, #a8a4f0 100%)
    color: white
    border-radius: 20px
    font-size: 14px
    transition: all 0.3s

    &:hover
      transform: scale(1.1)
      box-shadow: 0 2px 8px rgba(108,92,231,0.4)
